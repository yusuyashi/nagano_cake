<%= form_for(@customer, url: update_customer_path, method: :patch) do |f| %>
  <%= render "public/shared/error_messages", resource: @customer %>

  
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, autocomplete: "family-name" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, autocomplete: "given-name" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br/>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br/>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br/>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address %><br/>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %><br/>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
  
  <%= button_to "退会する", public_customers_withdrawal_path, method: :patch, data: { confirm: "本当に退会しますか？" }, class: "withdrawal-button" %>
<% end %>