<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>配送先</th>
      
      <th>支払い金額</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.shipping_address %></td>
        
        <td><%= order.total_amount %> 円</td>
        <td><%= link_to '詳細', public_order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>
