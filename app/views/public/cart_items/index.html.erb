<h1>ショッピングカート</h1>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
    <%= link_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete, data: { confirm: "本当に全ての商品を削除しますか？" } %>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
        <%= form_with(model: cart_item, url: public_cart_item_path(cart_item), method: :patch) do |f| %>
          <%= f.hidden_field :item_id, value: cart_item.item_id %>
          <%= f.select :quantity, options_for_select([1, 2, 3, 4, 5], cart_item.quantity) %>
          <%= f.submit "数量変更" %>
        <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td>
          <%= link_to "削除", public_cart_item_path(cart_item), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>合計金額: <%= @total_price %></p>
<%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
