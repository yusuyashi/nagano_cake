<h2>会員一覧</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <td><%= customer.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @customers %>
